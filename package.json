  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "hono": "^4.6.18",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^6.2.1"
  }
}